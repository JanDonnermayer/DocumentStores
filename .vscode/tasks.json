{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/DocumentStores/DocumentStores.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack.arrk",
            "command": "dotnet",
            "type": "process",
            "dependsOn" : "test",
            "args": [
                "pack",
                "${workspaceFolder}/src/DocumentStores/DocumentStores.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-o://mucfs/project/TOOLS/Mupe/Private/Development/.NuGet"
            ],
            "problemMatcher": "$msCompile"
        },       
        {
            "label": "pack.local",
            "command": "dotnet",
            "type": "process",
            "dependsOn" : "test",
            "args": [
                "pack",
                "${workspaceFolder}/src/DocumentStores/DocumentStores.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-c:Release",
                "-p:PackageVersion=${input:packageVersion}",
                "-o:C:/Users/${env:USERNAME}/.nuget/packages.local/DocumentStores"
            ],
            "problemMatcher": "$msCompile"
        },   
        {
            "label": "test",
            "command": "dotnet",
            "type": "process",
            "args": [
                "test",
                "${workspaceFolder}/test/DocumentStores.Test/DocumentStores.Test.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/DocumentStores/DocumentStores.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/src/DocumentStores/DocumentStores.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "type": "promptString",
            "id": "packageVersion",
            "description": "Specify package version.",
            "default": "0.0.0"
        }
    ]
}